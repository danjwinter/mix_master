<h1><%= yield(:title) %></h1>

<%= form_for(@playlist) do |f| %>
  <%= render 'shared/errors', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <% Song.all.each do |song| %>
    <div>

      <%= check_box_tag(:song_ids, song.id, @playlist.include_song?(song), name: 'playlist[song_ids][]', id: "song-#{song.id}") %>
      <%= song.title %>
    </div>
  <% end %>

  <%= f.submit %>
<% end %>